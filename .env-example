# Sultan Prints Environment Variables
# نسخ هذا الملف إلى .env وتعديل القيم حسب بيئتك

# إعدادات Flask
FLASK_APP=wsgi.py
FLASK_ENV=development  # استخدم 'production' في بيئة الإنتاج
SECRET_KEY=change-this-to-a-random-secret-key

# قاعدة البيانات
# يمكن استخدام MySQL أو PostgreSQL
DATABASE_URL=mysql+pymysql://user:password@localhost/sultan_prints
# DATABASE_URL=postgresql://user:password@localhost/sultan_prints

# إعدادات البريد الإلكتروني
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# إعدادات الدفع (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# إعدادات المدير
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-to-a-secure-password

# مفتاح سري لنقطة النهاية setup (للتطوير فقط)
SETUP_SECRET_KEY=change-this-to-a-random-key
